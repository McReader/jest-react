{
  "compilerOptions": {
    "target": "es2021",
    "jsx": "preserve",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.{ts,tsx}",
    "**/*.test.{ts,tsx}"
  ]
}
